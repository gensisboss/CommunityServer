/* components/item.wxss */
.tiezi {
    width: 94%;
    height: 240rpx;
    border-radius: 10px;
    background-color: white;
    margin-left: 3%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 20rpx;
}

.tiezi_left {
    width: 40%;
    height: 100%;
    display: flex;
    align-items: center;
}

.round {
    width: 100%;
    height: 100%;
    overflow: hidden;
    justify-content: center;
    align-items: center;
}

.round image {
    width: 100%;
    height: 100%;
    border-radius: 10px;
}

.tiezi_right {
    width: 60%;
    height: 85%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    margin-left: 30rpx;
}

.right_top {
    width: 100%;
    height: 25%;
}

.right_top text {
    font-size: 40rpx;
}

.right_center {
    width: 100%;
    height: 55%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.right_center image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30px;
}

.right_center text {
    font-size: 30rpx;
    margin-left: 10px;
}

.right_bottom {
    width: 100%;
    height: 20%;
    display: flex;
    justify-content: flex-end;
}

.right_bottom text{
   font-size: 30rpx;
   color: #999999;
}


