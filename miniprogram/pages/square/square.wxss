/* pages/square/square.wxss */
/* 顶部搜索框样式 */
.searchOuterView{
    /*设置内边距*/
    padding:15rpx;
  }
  .searchInnerView{
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* 设置宽高*/
    width: 720rpx;
    height:58rpx;
    /*设置背景颜色*/
    background:#eeeeee;
    /*设置边框*/
    border:2rpx solid #ececee;
    /*设置边框圆角*/
    border-radius: 8rpx;
    /*设置行高*/
    line-height: 52rpx;
    /*设置边框包含在宽高之内*/
    box-sizing: border-box;
  }
  .searchInnerView > image{
    /* 给图片设置宽和高 */
    width:40rpx;
    height:40rpx;
    margin-left: 10rpx;
    /*设置垂直对齐方式*/
    vertical-align: middle;
  }
  .searchInnerView > text{
    /* 给文字设置大小 */
    font-size:32rpx;
    /* 给文字设置颜色 */
    color: #353434;
    margin-left: auto;
    margin-right: auto;
  }
  
  
  





.movable-area {
    pointer-events:none;
    /* 这个属性设置为none,让所有事件穿透过去 */
    z-index: 100;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.movable-view {
    pointer-events:auto;
    /* 重设为auto,覆盖父属性设置  宽高要跟图片大小一致*/
    height: 100rpx;
    width: 100rpx;
}

